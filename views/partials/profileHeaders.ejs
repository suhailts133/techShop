<style>
  /* Standalone Navbar Color Palette */
  :root {
  --primary-color: #FFFFFF;       /* Pure White */
  --primary-light: #F4F7F1;      /* Light Matcha */
  --accent-color: #A3B899;       /* Matcha Green */
  --text-light: #2C352A;         /* Deep Green */
  --text-muted: #8C9A86;         /* Muted Green */
  --border-color: #E5EBE1;       /* Soft Green */
  --success-color: #779668;      /* Forest Green */
  --error-color: #B9937A;        /* Warm Brown */
}
  /* Sidebar Styling */
  .sidebar-desktop {
    width: 250px;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: var(--primary-color);
    padding: 20px;
    overflow-y: auto;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
  }

  .sidebar-desktop .nav-link {
    color: var(--text-light);
    padding: 10px 15px;
    margin: 5px 0;
    border-radius: 4px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
  }

  .sidebar-desktop .nav-link:hover {
    background-color: var(--primary-light);
    text-decoration: none;
  }

  .sidebar-desktop .nav-link.active {
    background-color: var(--primary-light);
    color: var(--text-light);
    font-weight: bold;
  }

  .sidebar-desktop .sidebar-header {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--text-light);
    text-align: center;
    margin-bottom: 20px;
  }

  .sidebar-desktop .sidebar-section {
    margin-bottom: 20px;
  }

  .sidebar-desktop .sidebar-section h6 {
    color: var(--text-muted);
    font-size: 0.9rem;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  /* Offcanvas Sidebar for Mobile */
  .offcanvas-start {
    width: 250px;
    background-color: var(--primary-color) !important;
  }

  .offcanvas-body .nav-link {
    color: var(--text-light) !important;
    padding: 10px 15px;
    margin: 5px 0;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  #mobileSidebarLabel {
    color: #2C352A;
  }

  .offcanvas-body .nav-link:hover {
    background-color: var(--primary-light) !important;
  }

  .offcanvas-body .nav-link.active {
    background-color: var(--primary-light);
    color: var(--text-light) !important;
    font-weight: bold;
  }

  /* Content Margin for Desktop */
  @media (min-width: 992px) {
    .navbar {
      margin-left: 250px;
    }

    .content {
      margin-left: 250px;
    }
  }

  /* Navbar Styling */
  .navbar {
    background: linear-gradient(to right, var(--primary-color), var(--primary-light));
    border-bottom: 1px solid var(--border-color);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .navbar-brand {
    font-size: 1.5rem;
    font-family: 'Georgia', serif;
    background: linear-gradient(to right, var(--text-light), var(--accent-color));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-decoration: none;
    padding: 0.5rem 0;
  }

  .nav-link {
    color: var(--text-light) !important;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    color: var(--accent-color) !important;
  }

  .btn-outline-light {
    border-color: var(--text-light);
    color: var(--text-light);
  }

  .btn-outline-light:hover {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
  }

  /* Search Input and Button */
  .search-input {
    width: 100%;
    padding: 0.8rem 1rem;
    border: 1px solid var(--border-color) !important;
    border-radius: 6px !important;
    background-color: var(--primary-dark) !important;
    color: var(--text-light) !important;
    transition: all 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--accent-color) !important;
    box-shadow: 0 0 0 2px rgba(231, 76, 60, 0.2) !important;
  }

  .search-input::placeholder {
    color: var(--text-muted) !important;
  }

  .search-button {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .search-button:hover {
    color: var(--accent-color);
  }

  /* Search Results Dropdown */
  #searchResults {
    background-color: var(--primary-light);
  }
  #searchResults a {
    color: var(--text-light) !important;
    padding: 0.8rem 1rem;
    text-decoration: none;
    display: block;
    transition: all 0.3s ease;
}

#searchResults a:hover {
    background-color: var(--primary-light);
    color: var(--success-color) !important; /* Better contrast */
}


  /* Buttons */
  .btn {
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-login {
    background: var(--accent-color);
    color: var(--text-light);
    font-weight: 500;
  }

  .btn-login:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
  }
</style>

