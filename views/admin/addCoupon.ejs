<% layout("../layouts/adminboilerplate") %>
  <title>
    <%= title %>
  </title>

  <style>
    .form-control, .form-select {
   padding: 10px 15px;
   border-radius: 5px;
   border-color: var(--border-color);
   color: var(--text-light);
 }
 
 .form-control:focus, .form-select:focus {
   box-shadow: 0 0 0 0.2rem rgba(44, 49, 57, 0.25);
   border-color: var(--accent-color);
 }
 
 .form-label {
   color: var(--text-light);
   font-weight: 500;
 }
 
 .btn-primary {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
  }
  
  .btn-primary:hover {
    background-color: var(--text-light);
    border-color: var(--text-light);
  }
 .text-center a{
    color: var(--text-muted);
 }
</style>
  

<main class="main-content">
  <div class="container mt-5">
    <h1 class="text-center">Add New Coupon</h1>
    <form action="/admin/coupon/add" method="POST" class="mt-4" novalidate>

      <div class="mb-3">
        <label for="name" class="form-label">name of the coupon</label>
        <input type="text" id="name" name="name" class="form-control" required placeholder="Enter a coupon">
        <div class="invalid-feedback">

        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <!-- Discount Value -->
      <div class="mb-3">
        <label for="discountValue" class="form-label">Discount Value (₹)</label>
        <input type="number" id="discountValue" name="discountValue" class="form-control" required min="0"
          placeholder="Enter discount amount">
        <div class="invalid-feedback">

        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <!-- Minimum Purchase -->
      <div class="mb-3">
        <label for="minPurchase" class="form-label">Minimum Purchase (₹)</label>
        <input type="number" id="minPurchase" name="minPurchase" class="form-control" min="0"
          placeholder="Enter minimum purchase amount">
        <div class="invalid-feedback">

        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <!-- Validity Duration -->
      <div class="mb-3">
        <label for="validityDuration" class="form-label">Validity Duration (Days)</label>
        <input type="number" id="validityDuration" name="validityDuration" class="form-control" required min="1"
          placeholder="Enter number of valid days">
        <div class="invalid-feedback">

        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <!-- Status -->
      <div class="mb-3">
        <label for="status" class="form-label">Status</label>
        <select id="status" name="status" class="form-select">
          <option value="active" selected>Active</option>
          <option value="inactive">Inactive</option>
        </select>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Add Coupon</button>
      </div>
    </form>
  </div>

</main>

<script src="/js/addCoupon.js"></script>