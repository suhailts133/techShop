<% layout("../layouts/boilerplate") %>
<title><%= title %></title>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center mb-4">Edit Brand</h3>
                    
                    <form id="editBrandForm" method="post" action="/admin/brands/edit?id=<%= brandData._id %>" enctype="multipart/form-data" novalidate>
                        <!-- Brand Name -->
                        <div class="mb-3">
                            <label for="brandName" class="form-label">Brand Name</label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="brandName" 
                                name="brandName" 
                                placeholder="Enter brand name" 
                                value="<%= brandData.brandName %>"
                                required 
                            >
                            <div class="invalid-feedback">
                                Please enter a brand name.
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <!-- Logo Preview -->
                        <div class="mb-3">
                            <label for="currentLogo" class="form-label">Current Logo</label>
                            <div>
                                <img 
                                    src="/uploads/brands/<%= brandData.logo %>" 
                                    alt="<%= brandData.brandName %> Logo" 
                                    class="img-thumbnail" 
                                    style="max-width: 100px; max-height: 100px;"
                                >
                            </div>
                        </div>

                        <!-- Upload New Logo -->
                        <div class="mb-3">
                            <label for="image" class="form-label">Upload New Logo</label>
                            <input 
                                type="file" 
                                class="form-control" 
                                id="image" 
                                name="image" 
                                accept="image/*" 
                            >
                            <div class="invalid-feedback">
                                Please upload a brand logo.
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Edit Brand</button>
                        </div>

                        <!-- Back Link -->
                        <div class="mt-3 text-center">
                            <p><a href="/admin/brands">Back to Brands</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/editBrand.js"></script>
