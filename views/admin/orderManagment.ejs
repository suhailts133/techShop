<%- layout("../layouts/adminboilerplate") %>
<title>
    <%= title %>
</title>


<div class="container mt-5">
  <h2 class="mb-4">Manage Orders</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>User</th>
        <th>Total Amount</th>
        <th>Shipping Address</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.orderId %></td>
          <td><%= order.userId.name %></td>
          <td>â‚¹<%= order.totalAmount.toFixed(2) %></td>
          <td><%= order.shippingAddress.houseAddress %>, <%= order.shippingAddress.pincode %></td>
          <td><%= order.orderStatus %></td>
          <td>
            <a href="/admin/orders/view?id=<%= order._id %>" class="btn btn-info btn-sm">View</a>
            <form action="/admin/orders?id=<%= order._id %>/delete" method="POST" class="d-inline-block">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

