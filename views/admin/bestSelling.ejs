<% layout("../layouts/adminboilerplate") %>
<title><%= title %></title>

    <style>
   
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', system-ui, sans-serif;
        }

        body {
            background-color: var(--primary-light);
            min-height: 100vh;
        }

        .main-content {
            padding: 2rem;
        }

        .dashboard {
            max-width: 1400px;
            margin-top: 10px;
        }

        .analytics-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }

        .analytics-card {
            background: var(--primary-color);
            border-radius: 16px;
            padding: 1.75rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }

        .analytics-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--accent-color);
            opacity: 0.8;
        }

        .analytics-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            position: relative;
        }

        .card-title {
            font-size: 1.25rem;
            color: var(--text-light);
            font-weight: 600;
        }

        .rank-badge {
            background-color: var(--accent-color);
            color: var(--primary-color);
            padding: 0.5rem 1rem;
            border-radius: 30px;
            font-weight: 500;
            font-size: 0.875rem;
            box-shadow: 0 2px 10px rgba(163, 184, 153, 0.2);
        }

        .product-list {
            list-style: none;
            margin: 0 -1.75rem;
        }

        .product-item {
            display: flex;
            justify-content: space-between;
            padding: 1.25rem 1.75rem;
            border-bottom: 1px solid var(--border-color);
            transition: all 0.3s ease;
            position: relative;
        }

        .product-item:last-child {
            border-bottom: none;
        }

        .product-item:hover {
            background: var(--primary-light);
            padding-left: 2rem;
        }

        .product-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 3px;
            height: 0;
            background: var(--accent-color);
            transition: height 0.3s ease;
        }

        .product-item:hover::before {
            height: 100%;
        }

        .product-name {
            color: var(--text-light);
            font-weight: 500;
            font-size: 1rem;
        }

        .product-stats {
            display: flex;
            gap: 1.5rem;
            align-items: center;
        }

        .stats-value {
            color: var(--success-color);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .card-summary {
            margin-top: 1.5rem;
            padding: 1.25rem 1.75rem;
            background: var(--primary-light);
            border-radius: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-summary span:first-child {
            color: var(--text-muted);
            font-weight: 500;
        }

        .card-summary .stats-value {
            font-size: 1.25rem;
            color: var(--text-light);
        }

        @media (max-width: 1024px) {
            .analytics-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .analytics-grid {
                grid-template-columns: 1fr;
            }
            
            .main-content {
                padding: 1rem;
            }

            .analytics-card {
                padding: 1.25rem;
            }

            .card-summary {
                padding: 1rem;
                flex-direction: column;
                gap: 0.5rem;
                text-align: center;
            }
        }
    </style>

    <main class="main-content">
        <div class="dashboard">
            <div class="analytics-grid">
                <!-- Top Categories -->
                <div class="analytics-card">
                    <div class="card-header">
                        <h2 class="card-title">Top Categories</h2>
                        <span class="rank-badge">Units Sold</span>
                    </div>
                    <ul class="product-list">
                        <% bestSellingCategorys.forEach(category => { %>
                            <li class="product-item">
                                <span class="product-name"><%= category.name %></span>
                                <div class="product-stats">
                                    <span class="stats-value"><%= category.purchaseCount %></span>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                    <div class="card-summary">
                        <span>Total Units Sold</span>
                        <span class="stats-value"><%= categoryTotalCount %></span>
                    </div>
                </div>

                <!-- Top Products -->
                <div class="analytics-card">
                    <div class="card-header">
                        <h2 class="card-title">Top Products</h2>
                        <span class="rank-badge">Units Sold</span>
                    </div>
                    <ul class="product-list">
                        <% bestSellingProducts.forEach(product => { %>
                            <li class="product-item">
                                <span class="product-name"><%= product.productName %></span>
                                <div class="product-stats">
                                    <span class="stats-value"><%= product.purchaseCount %></span>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                    <div class="card-summary">
                        <span>Total Units Sold</span>
                        <span class="stats-value"><%= productTotalCount %></span>
                    </div>
                </div>

                <!-- Top Brands -->
                <div class="analytics-card">
                    <div class="card-header">
                        <h2 class="card-title">Top Brands</h2>
                        <span class="rank-badge">Units Sold</span>
                    </div>
                    <ul class="product-list">
                        <% bestSellingBrands.forEach(brand => { %>
                            <li class="product-item">
                                <span class="product-name"><%= brand.brandName %></span>
                                <div class="product-stats">
                                    <span class="stats-value"><%= brand.purchaseCount %></span>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                    <div class="card-summary">
                        <span>Total Units Sold</span>
                        <span class="stats-value"><%= brandTotalCount %></span>
                    </div>
                </div>
            </div>
        </div>
    </main>
