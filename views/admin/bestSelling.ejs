<% layout("../layouts/adminboilerplate") %>
<title><%= title %></title>

<style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', system-ui, sans-serif;
    }

    body {
      padding: 2rem;
      min-height: 100vh;
    }

    .dashboard {

      max-width: 1400px;
      margin-top: 10px;
    }

    .analytics-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    @media (max-width: 1024px) {
      .analytics-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 768px) {
      .analytics-grid {
        grid-template-columns: 1fr;
      }
    }

    .analytics-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 1.75rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15),
                  0 1px 3px rgba(0, 0, 0, 0.05);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      overflow: hidden;
    }

    .analytics-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #FFD700, #FFA500);
      opacity: 0.8;
    }

    .analytics-card:hover {
      transform: translateY(-5px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      position: relative;
    }

    .card-title {
      font-size: 1.5rem;
      color: #1a1a1a;
      font-weight: 700;
      letter-spacing: -0.5px;
    }

    .rank-badge {
      background: linear-gradient(135deg, #FFD700, #FFA500);
      color: #1a1a1a;
      padding: 0.5rem 1rem;
      border-radius: 30px;
      font-weight: 600;
      font-size: 0.875rem;
      box-shadow: 0 2px 10px rgba(255, 215, 0, 0.2);
    }

    .product-list {
      list-style: none;
      margin: 0 -1.75rem;
    }

    .product-item {
      display: flex;
      justify-content: space-between;
      padding: 1.25rem 1.75rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.06);
      transition: all 0.3s ease;
    }

    .product-item:last-child {
      border-bottom: none;
    }

    .product-item:hover {
      background: rgba(0, 0, 0, 0.02);
      padding-left: 2rem;
    }

    .product-name {
      color: #2c3e50;
      font-weight: 500;
      font-size: 1.1rem;
      position: relative;
    }

    .product-stats {
      display: flex;
      gap: 1.5rem;
      align-items: center;
    }

    .stats-value {
      color: #1a1a1a;
      font-weight: 700;
      font-size: 1.1rem;
      background: linear-gradient(135deg, #2c3e50, #3498db);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .card-summary {
      margin-top: 1.5rem;
      padding: 1.25rem 1.75rem;
      background: rgba(0, 0, 0, 0.03);
      border-radius: 12px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .card-summary span:first-child {
      color: #666;
      font-weight: 500;
    }

    .card-summary .stats-value {
      font-size: 1.25rem;
    }

    /* Use your EJS syntax here */
    .product-item::before {
      content: '';
      position: absolute;
      left: 0;
      width: 3px;
      height: 0;
      background: linear-gradient(135deg, #FFD700, #FFA500);
      transition: height 0.3s ease;
    }

    .product-item:hover::before {
      height: 100%;
    }
  </style>
</head>
<body>
  <div class="dashboard">
    <div class="analytics-grid">
      <!-- Top Categories -->
      <div class="analytics-card">
        <div class="card-header">
          <h2 class="card-title">Top Categories</h2>
          <span class="rank-badge">Units Sold</span>
        </div>
        <% bestSellingCategorys.forEach(category => { %>
          <ul class="product-list">
            <li class="product-item">
              <span class="product-name"><%= category.name %></span>
              <div class="product-stats">
                <span class="stats-value"><%= category.purchaseCount %></span>
              </div>
            </li>
          </ul>
        <% }) %>
        <div class="card-summary">
          <span>Total Units Sold</span>
          <span class="stats-value"><%= categoryTotalCount %></span>
        </div>
      </div>

      <!-- Top Products -->
      <div class="analytics-card">
        <div class="card-header">
          <h2 class="card-title">Top Products</h2>
          <span class="rank-badge">Units Sold</span>
        </div>
        <% bestSellingProducts.forEach(product => { %>
          <ul class="product-list">
            <li class="product-item">
              <span class="product-name"><%= product.productName %></span>
              <div class="product-stats">
                <span class="stats-value"><%= product.purchaseCount %></span>
              </div>
            </li>
          </ul>
        <% }) %>
        <div class="card-summary">
          <span>Total Units Sold</span>
          <span class="stats-value"><%= productTotalCount %></span>
        </div>
      </div>

      <!-- Top Brands -->
      <div class="analytics-card">
        <div class="card-header">
          <h2 class="card-title">Top Brands</h2>
          <span class="rank-badge">Units Sold</span>
        </div>
        <% bestSellingBrands.forEach(brand => { %>
          <ul class="product-list">
            <li class="product-item">
              <span class="product-name"><%= brand.brandName %></span>
              <div class="product-stats">
                <span class="stats-value"><%= brand.purchaseCount %></span>
              </div>
            </li>
          </ul>
        <% }) %>
        <div class="card-summary">
          <span>Total Units Sold</span>
          <span class="stats-value"><%= brandTotalCount %></span>
        </div>
      </div>
    </div>
  </div>
