<% layout("../layouts/adminboilerplate") %>
<title><%= title %></title>

<style>

    body {
        font-family: 'Inter', sans-serif;
        background: var(--primary-light);
        color: var(--text-light);
        line-height: 1.6;
        margin: 0;
        padding: 20px;
    }

    .ledger-container {
        max-width: 1200px;
        margin: 0 auto;
        background: var(--primary-color);
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(163, 184, 153, 0.1);
        overflow: hidden;
    }

    .ledger-summary {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 24px;
        padding: 24px;
        background: var(--primary-color);
    }

    .summary-card {
        background: var(--primary-light);
        padding: 20px;
        border-radius: 12px;
        border: 1px solid var(--border-color);
        transition: transform 0.2s;
    }

    .summary-card:hover {
        transform: translateY(-2px);
    }

    .summary-card h3 {
        margin: 0 0 12px 0;
        color: var(--text-muted);
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .summary-card p {
        margin: 0;
        font-size: 28px;
        font-weight: 600;
        color: var(--text-light);
    }

    .ledger-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 20px 0;
    }

    .ledger-table th {
        background: var(--primary-light);
        color: var(--text-light);
        padding: 16px;
        text-align: left;
        font-weight: 600;
        font-size: 14px;
        border-bottom: 2px solid var(--border-color);
    }

    .ledger-table td {
        padding: 16px;
        border-bottom: 1px solid var(--border-color);
        color: var(--text-light);
    }

    .ledger-table tr:hover {
        background: var(--primary-light);
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 500;
    }

    .status-Purchase {
        background: var(--success-color);
        color: var(--primary-color);
    }

    .status-Refund {
        background: var(--error-color);
        color: var(--primary-color);
    }

    .status-Cancelled {
        background: var(--text-muted);
        color: var(--primary-color);
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 24px;
        gap: 8px;
    }

    .pagination a {
        padding: 8px 16px;
        border: 1px solid var(--border-color);
        background: var(--primary-color);
        color: var(--text-light);
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .pagination a:hover {
        background: var(--accent-color);
        color: var(--primary-color);
        border-color: var(--accent-color);
    }

    .pagination .active {
        background: var(--accent-color);
        color: var(--primary-color);
        border-color: var(--accent-color);
    }

    .pagination .disabled {
        background: var(--primary-light);
        color: var(--text-muted);
        cursor: not-allowed;
        border-color: var(--border-color);
    }

    @media (max-width: 768px) {
        .ledger-summary {
            grid-template-columns: 1fr;
            padding: 16px;
        }

        .ledger-table {
            display: block;
            overflow-x: auto;
        }

        .pagination {
            flex-wrap: wrap;
        }
    }
</style>

<main class="main-content">
    <div class="ledger-container">
        <div class="ledger-summary">
            <div class="summary-card">
                <h3>Total Transactions</h3>
                <p><%= totalTransactions %></p>
            </div>
            <div class="summary-card">
                <h3>Total Amount</h3>
                <p>₹<%= totalAmount %></p>
            </div>
            <div class="summary-card">
                <h3>Pending Amount</h3>
                <p>₹<%= pendingAmount %></p>
            </div>
            <div class="summary-card">
                <h3>Return and Cancelled Amount</h3>
                <p>₹<%= returnRefundAmount %></p>
            </div>
        </div>

        <div style="overflow-x: auto;">
            <table class="ledger-table">
                <thead>
                    <tr>
                        <th>Transaction ID</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Amount</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td><%= transaction.transactionId %></td>
                            <td><%= transaction.updatedAt.toLocaleDateString() %></td>
                            <td><%= transaction.updatedAt.toLocaleTimeString() %></td>
                            <td>₹<%= transaction.amount %></td>
                            <td><%= transaction.paymentMethod %></td>
                            <td>
                                <span class="status-badge status-<%= transaction.paymentStatus %>">
                                    <%= transaction.paymentStatus %>
                                </span>
                            </td>
                            <td><%= transaction.action %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>">&lt; Previous</a>
            <% } else { %>
                <a class="disabled">&laquo;</a>
            <% } %>

            <% for(let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                    <a class="active" href="?page=<%= i %>"><%= i %></a>
                <% } else { %>
                    <a href="?page=<%= i %>"><%= i %></a>
                <% } %>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>">Next &gt;</a>
            <% } else { %>
                <a class="disabled">&raquo;</a>
            <% } %>
        </div>
    </div>
</main>