<% layout("../layouts/adminboilerplate") %>
<title><%= title %></title>
<style>
    .container {
        background: var(--primary-light);
        padding: 2rem;
        border-radius: 12px;
        margin-top: 20px;
    }

    h2 {
        color: var(--text-light);
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .form-control {
        background: var(--primary-color);
        border: 1px solid var(--border-color);
        color: var(--text-light);
    }

    .form-control::placeholder {
        color: var(--text-muted);
    }

    .btn-primary {
        background: var(--success-color);
        border: none;
        color: var(--primary-color);
        transition: filter 0.3s ease;
    }

    .btn-primary:hover {
        filter: brightness(90%);
    }

    .btn-success {
        background: var(--success-color);
        border: none;
        color: var(--primary-color);
        transition: filter 0.3s ease;
    }

    .btn-success:hover {
        filter: brightness(90%);
    }

    .btn-danger {
        background: var(--error-color);
        border: none;
        color: var(--primary-color);
        transition: filter 0.3s ease;
    }

    .btn-danger:hover {
        filter: brightness(90%);
    }

    .btn-warning {
        background: var(--accent-color);
        border: none;
        color: var(--primary-color);
        transition: filter 0.3s ease;
    }

    .btn-warning:hover {
        filter: brightness(90%);
    }

    /* Table Improvements */
    .table-container {
        display: flex;
        justify-content: center;
        width: 100%;
        overflow-x: auto;
    }

    .table {
        background: var(--primary-color);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        width: 100%;
        margin: 0 auto;
        overflow: hidden;
    }

    .table th {
        background: var(--primary-light);
        color: var(--text-light);
        font-weight: 600;
        padding: 1rem;
        text-align: center;
        vertical-align: middle;
    }

    .table td {
        color: var(--text-light);
        padding: 0.75rem;
        vertical-align: middle;
        text-align: left;
    }

    .table th:nth-child(1),
    .table td:nth-child(1) {
        min-width: 150px;
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table-hover tbody tr:hover {
        background: var(--primary-light);
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        display: inline-block;
        margin: 0.25rem 0;
    }

    .badge.bg-danger {
        background: var(--error-color) !important;
        color: var(--primary-color) !important;
    }

    .badge.bg-success {
        background: var(--success-color) !important;
        color: var(--primary-color) !important;
    }

    .badge.bg-secondary {
        background: var(--text-muted) !important;
        color: var(--primary-color) !important;
    }

    .pagination .page-link {
        background: var(--primary-color);
        border: 1px solid var(--border-color);
        color: var(--text-light);
    }

    .pagination .page-item.active .page-link {
        background: var(--success-color);
        border-color: var(--success-color);
        color: var(--primary-color);
    }

    .pagination .page-link:hover {
        background: var(--primary-light);
    }

    .reset-icon {
        position: relative;
        right: 115px;
        top: 20%;
        transform: translateY(-50%);
        z-index: 10;
        color: var(--text-muted);
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .variant-details {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .variant-details div {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .table {
            font-size: 0.9rem;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .reset-icon {
            right: 30px;
        }
    }
</style>
<main class="main-content">
    <%- include("../partials/flash.ejs") %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">Products</h2>
            </div>
        </div>

        <!-- Add New Button -->
        <div class="row mt-3">
            <div class="col-12 d-flex justify-content-end">
                <a href="/admin/products/add" class="btn btn-success">Add New Product</a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="row mt-3">
            <div class="col-12">
                <form action="/admin/products/" method="get">
                    <div class="input-group position-relative">
                        <input type="text" name="search" class="form-control" placeholder="Search products..."
                            value="<%= search || '' %>" id="searchInput" />
                        <a href="/admin/products/" class="text-decoration-none" style="cursor: pointer;">
                            <span class="reset-icon">&#10005;</span>
                        </a>
                        <button type="submit" class="btn btn-primary ms-2">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Products Table -->
        <div class="row mt-4">
            <div class="col-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Offer</th>
                            <th>Variants</th>
                            <th>Stock</th>
                            <th>Regular Price</th>
                            <th>Sale Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (productData.length === 0) { %>
                            <tr>
                                <td colspan="8" class="text-center">No products found</td>
                            </tr>
                        <% } else { %>
                            <% for (let i = 0; i < productData.length; i++) { %>
                                <tr>
                                    <td><%= productData[i].productName %></td>
                                    <td><%= productData[i].productOffer %> %</td>
                                    <td>
                                        <div class="variant-details">
                                            <% productData[i].variants.forEach(variant => { %>
                                                <div>
                                                    <span class="badge bg-secondary">
                                                        <%= variant.color %> - <%= variant.size %>
                                                    </span>
                                                </div>
                                            <% }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="variant-details">
                                            <% productData[i].variants.forEach(variant => { %>
                                                <div><%= variant.quantity %></div>
                                            <% }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="variant-details">
                                            <% productData[i].variants.forEach(variant => { %>
                                                <div><%= variant.price %></div>
                                            <% }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="variant-details">
                                            <% productData[i].variants.forEach(variant => { %>
                                                <div><%= variant.salePrice %></div>
                                            <% }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (productData[i].isBlocked) { %>
                                            <span class="b1 badge bg-danger">Blocked</span>
                                        <% } else { %>
                                            <span class="b1 badge bg-success">Available</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <!-- Edit Button -->
                                            <a href="/admin/products/edit?id=<%= productData[i]._id %>"
                                                class="btn btn-warning btn-sm">Edit</a>

                                            <!-- Block/Unblock Button -->
                                            <button data-product-id="<%= productData[i]._id %>"
                                                data-search="<%= search || '' %>"
                                                data-page="<%= page || '' %>"
                                                onclick="toggleProductStatus(this)"
                                                class="btn <%= productData[i].isBlocked ? 'btn-danger' : 'btn-success' %> btn-sm">
                                            <%= productData[i].isBlocked ? 'Unblock' : 'Block' %>
                                        </button>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="row mt-3">
            <div class="col-12 d-flex justify-content-center">
                <nav>
                    <ul class="pagination">
                        <% if (page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/products/?search=<%= search || '' %>&page=<%= page - 1 %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        <% } %>

                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= page === i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/products/?search=<%= search || '' %>&page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (page < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/products/?search=<%= search || '' %>&page=<%= page + 1 %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>



<script>
    async function toggleProductStatus(button) {
    const productId = button.getAttribute('data-product-id');
    const search = button.getAttribute('data-search');
    const page = button.getAttribute('data-page');

    try {
        const response = await fetch(`/admin/products/toggle?id=${productId}&search=${search}&page=${page}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const data = await response.json();

        if (data.success) {
            // Toggle the button text and class
            if (data.isBlocked) {
                button.textContent = 'Unblock';
                button.classList.remove('btn-success');
                button.classList.add('btn-danger');
            } else {
                button.textContent = 'Block';
                button.classList.remove('btn-danger');
                button.classList.add('btn-success');
            }

            // Update the status badge
            const row = button.closest('tr');
            const statusBadge = row.querySelector('.b1');
            if (statusBadge) {
                if (data.isBlocked) {
                    statusBadge.textContent = 'Blocked';
                    statusBadge.classList.remove('bg-success');
                    statusBadge.classList.add('bg-danger');
                } else {
                    statusBadge.textContent = 'Available';
                    statusBadge.classList.remove('bg-danger');
                    statusBadge.classList.add('bg-success');
                }
            }
        } else {
            alert('Failed to toggle product status');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while toggling product status');
    }
}
 </script>