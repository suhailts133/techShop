<% layout("../layouts/profileboilerPlate") %>
<title><%= title %></title>

<div class="content">
    <div class="container mt-5">
        <h1 class="mb-4">Order Details</h1>

        <!-- Order Summary -->
        <div class="mb-4">
            <h4>Order ID: <%= order.orderId %></h4>
            <p><strong>Status:</strong> <%= order.orderStatus %></p>
            <p><strong>Total Amount:</strong> ₹<%= order.totalAmount.toFixed(2) %></p>
            <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
        </div>

        <!-- Shipping Address -->
        <div class="mb-4">
            <h5>Shipping Address</h5>
            <p><%= order.shippingAddress.houseAddress %>, <%= order.shippingAddress.pincode %></p>
        </div>

        <!-- Items Table -->
        <div class="mb-4">
            <h5>Order Items</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Variant</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.items.forEach(item => { %>
                        <tr>
                            <td>
                                <img src="/uploads/products/<%= item.productId.productImage[0] %>" class="img-thumbnail" style="width: 100px;">
                            </td>
                            <td><%= item.productId.productName %></td>
                            <td>
                                <% if (item.variantDetails) { %>
                                    Color: <%= item.variantDetails.color %> <br>
                                    Size: <%= item.variantDetails.size %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td><%= item.quantity %></td>
                            <td>₹<%= item.price.toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Return Request Form -->
        <% if(order.orderStatus === "Delivered") {%>
            <div class="mb-4">
                <h5>Request a Return</h5>
                <form action="/profile/orders/orderDetails?orderId=<%= order.orderId %>" method="POST">
                    <div class="mb-3">
                        <label for="reason" class="form-label">Reason for Return</label>
                        <textarea id="reason" name="reason" class="form-control" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger">Submit Return Request</button>
                </form>
            </div>
            <%  }%>

        <!-- Back to Orders -->
        <div class="text-center mt-4">
            <a href="/orders" class="btn btn-secondary">Back to Orders</a>
        </div>
    </div>
</div>
