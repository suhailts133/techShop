<% layout("../layouts/profileboilerPlate") %>
<title><%= title  %></title>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center mb-4">current Password</h3>

                    <form id="changePasswordCheck" method="post" action="/profile/loadChangePasswordCheck" novalidate>
                        <!-- Email -->
                        <div class="mb-3">
                            <label for="password" class="form-label">password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your current password" required autocomplete="email">
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <!-- Send OTP Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Submit</button>
                        </div>

                        <!-- Back to Login Link -->
                        <div class="mt-3 text-center">
                            <p>forget your password? <a href="/loadForgetPasswordPage">forget Password </a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/changePasswordCheck.js"></script>
