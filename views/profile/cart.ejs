<% layout("../layouts/profileboilerPlate") %>
<%= title %>

<!-- Main Content Area -->
<div class="content">
    <div class="container-extended mt-5">
        <h2 class="mb-4">Your Shopping Cart</h2>

        <% if(cart.items.length === 0) { %>
            <div class="alert alert-warning" role="alert">
                Your cart is empty. <a href="/" class="alert-link">Go shopping!</a>
            </div>
        <% } else { %>

            <div class="cart-items">
                <!-- Loop through cart items -->
                <% cart.items.forEach(item => { %>
                    <div class="cart-item">
                        <!-- Product Image -->
                        <div class="product-img">
                            <img src="/uploads/products/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>">
                        </div>

                        <!-- Product Name -->
                        <div class="product-name">
                            <p><%= item.productId.productName %></p>
                        </div>

                        <!-- Product Color -->
                        <div class="product-color">
                            <p><%= item.color %></p>
                        </div>

                        <!-- Product Size -->
                        <div class="product-size">
                            <p><%= item.size %></p>
                        </div>

                        <!-- Product Quantity -->
                        <div class="product-quantity">
                            <form action="/profile/cart/update?itemId=<%= item._id %>" method="POST">
                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1">
                                <button type="submit" class="update-btn">Update</button>
                            </form>
                        </div>

                        <!-- Product Subtotal -->
                        <div class="product-price">
                            <p>₹<%= item.totalPrice.toFixed(2) %></p>
                        </div>
                        <button 
                                        type="button" 
                                        class="btn btn-danger btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal" 
                                        onclick="deleteCartItem('<%= item._id %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                       
                    </div>
                <% }) %>
            </div>

            <!-- Cart Summary (Right Side) -->
            <div class="cart-summary">
                <div class="summary-card">
                    <h5>Cart Summary</h5>
                    <p><strong>Total Amount:</strong> ₹<%= cart.totalAmount.toFixed(2) %></p>
                    <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
                </div>
            </div>

        <% } %>
    </div>
</div>


\<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this address? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteCartItem(itemId) {
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        confirmDeleteBtn.href = `/profile/cart/delete?itemId=${itemId}`;
    }
</script>
