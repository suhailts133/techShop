<% layout("../layouts/profileboilerPlate") %>

        <!-- Main Content Area -->
        <div class="content">
            <div class="container-extended mt-5">
                <h2 class="mb-4">Your Wishlist</h2>
                <div id="cart-message" class="mt-3"></div>
                <% if (wishlist && wishlist.items && wishlist.items.length> 0) { %>
                    <div class="wishlist-items">
                        <!-- Loop through wishlist items -->
                        <% wishlist.items.forEach(item=> { %>
                            <div class="row mb-4 wishlist-item border p-3 rounded">
                                <!-- Product Image -->
                                <div class="col-3 product-img">
                                    <img src="/uploads/products/<%= item.productId.productImage[0] %>"
                                        alt="<%= item.productName %>" class="img-fluid">
                                </div>

                                <!-- Product Name -->
                                <div class="col-3 product-name d-flex align-items-center justify-content-center">
                                    <p>
                                        <%= item.productName %>
                                    </p>
                                </div>

                                <!-- Product Color -->
                                <div class="col-3 product-color d-flex align-items-center justify-content-center">
                                    <p>
                                        <%= item.color %> - <%= item.size %>
                                    </p>
                                </div>



                                <!-- Delete Button -->
                                <div class="col-3 text-center d-flex align-items-center justify-content-center">
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal" onclick="deleteWishlistItem('<%= item._id %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <button class="btn btn-warning btn-sm ms-3"
                                        onclick="addToCart('<%= item.productId._id %>', '<%= item.variantId %>', 1 , '<%= item.productId.productImage[0] %>')">Add
                                        To Cart</button>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <% } else { %>
                        <div class="alert alert-warning" role="alert">
                            Your wishlist is empty. <a href="/" class="alert-link">Go shopping!</a>
                        </div>
                        <% } %>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this item from your wishlist? This action cannot be undone.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function deleteWishlistItem(itemId) {
                const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
                confirmDeleteBtn.href = `/profile/wishlist/delete?itemId=${itemId}`;
            }

            async function addToCart(productId, variantId, quantity, image) {
                try {
                    const data = {
                        productId: productId,
                        variantId: variantId,
                        quantity: quantity,
                        productImage: image
                    };

                    const response = await fetch('/addToCart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json',
                        },
                        body: JSON.stringify(data)
                    })
                    if (response.status === 401) {
                        window.location.href = '/login';
                        return;
                    }
                    const output = await response.json();
                    const messageEl = document.getElementById('cart-message');
                    const message = output.message || 'An unexpected error occurred.';
                    if (output.success) {
                        messageEl.innerHTML = `
                <div class="alert alert-success" role="alert">
                ${message}
                </div>`;

                if (output.redirectTo) {
                    setTimeout(() => {
                        console.log('Redirecting to:', output.redirectTo);
                        window.location.href = output.redirectTo;  // Redirect to wishlist page
                    }, 2000); // You can adjust the timeout
                }
                    } else {
                        messageEl.innerHTML = `
                <div class="alert alert-danger" role="alert">
                    ${message}
                </div>`;
                if (output.redirectTo) {
                    setTimeout(() => {
                        console.log('Redirecting to:', output.redirectTo);
                        window.location.href = output.redirectTo;  // Redirect to wishlist page
                    }, 2000); // You can adjust the timeout
                }
                    }

                    setTimeout(() => {
                        messageEl.innerHTML = '';
                    }, 1000);

                } catch (error) {
                    console.error('Error while adding product form cart to wishlist:', error.message);

                    // Show error message
                    const messageEl = document.getElementById('cart-message');
                    messageEl.innerHTML = `
            <div class="alert alert-danger" role="alert">
                An error occurred while adding the product to the cart. Please try again later. lol
            </div>`;

                    // Clear the message after 3 seconds
                    setTimeout(() => {
                        messageEl.innerHTML = '';
                    }, 1000);
                }
            }



        </script>