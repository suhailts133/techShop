<% layout("../layouts/profileboilerPlate") %>
<%= title %>

<!-- Main Content Area -->
<div class="content">
    <div class="container-extended mt-5">
        <h2 class="mb-4">Your Wishlist</h2>

        <% if (wishlist && wishlist.items && wishlist.items.length > 0) { %>
            <div class="wishlist-items">
                <!-- Loop through wishlist items -->
                <% wishlist.items.forEach(item => { %>
                    <div class="row mb-4 wishlist-item border p-3 rounded">
                        <!-- Product Image -->
                        <div class="col-3 product-img">
                            <img src="/uploads/products/<%= item.productId.productImage[0] %>" alt="<%= item.productName %>" class="img-fluid">
                        </div>

                        <!-- Product Name -->
                        <div class="col-3 product-name d-flex align-items-center justify-content-center">
                            <p><%= item.productName %></p>
                        </div>

                        <!-- Product Color -->
                        <div class="col-3 product-color d-flex align-items-center justify-content-center">
                            <p><%= item.color %> - <%= item.size %></p>
                        </div>

                     

                        <!-- Delete Button -->
                        <div class="col-3 text-center d-flex align-items-center justify-content-center">
                            <button 
                                type="button" 
                                class="btn btn-danger btn-sm" 
                                data-bs-toggle="modal" 
                                data-bs-target="#deleteModal" 
                                onclick="deleteWishlistItem('<%= item._id %>')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>

        <% } else { %>
            <div class="alert alert-warning" role="alert">
                Your wishlist is empty. <a href="/" class="alert-link">Go shopping!</a>
            </div>
        <% } %>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item from your wishlist? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteWishlistItem(itemId) {
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        confirmDeleteBtn.href = `/profile/wishlist/delete?itemId=${itemId}`;
    }
</script>
