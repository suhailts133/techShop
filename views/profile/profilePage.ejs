<% layout("../layouts/profileboilerPlate") %>

<style>
  :root {
  --primary-color: #0F172A;     /* Midnight Blue */
  --primary-light: #1E293B;     /* Medium Midnight */
  --primary-dark: #0A1121;      /* Deep Midnight */
  --accent-color: #475569;      /* Shadow */
  --accent-hover: #334155;      /* Dark Shadow */
  --text-light: #F8FAFC;        /* Light Blue */
  --text-muted: #94A3B8;        /* Muted Blue */
  --border-color: #1E293B;      /* Border Midnight */
}
    body {
        background-color: #f8f9fa;
        color: var(--primary-dark);
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
        background-color: #ffffff;
        border: 1px solid var(--border-color);
    }

    .card-header {
        background-color: var(--primary-color) !important;
        color: var(--text-light) !important;
        text-align: center;
        padding: 1.5rem;
    }

    .card-header h2 {
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .card-header p {
        margin-bottom: 0;
        font-size: 1.1rem;
    }

    .icon-circle {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: var(--primary-color);
        color: var(--text-light);
    }

    .wallet-balance {
        color: var(--accent-color);
        font-size: 1.5rem;
        font-weight: bold;
    }

    #referralCode {
        background-color: #ffffff;
        border: 1px solid var(--border-color);
        color: var(--primary-dark);
        font-weight: 600;
        letter-spacing: 2px;
    }

    .copy-button {
        border: 1px solid var(--accent-color);
        color: var(--accent-color);
        transition: all 0.3s ease;
    }

    .copy-button:hover {
        background-color: var(--accent-color);
        color: var(--text-light);
    }

    .btn-accent {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: var(--text-light);
        transition: all 0.3s ease;
    }

    .btn-accent:hover {
        background-color: var(--accent-hover);
        border-color: var(--accent-hover);
        color: var(--text-light);
    }

    .btn-outline-primary {
        border: 1px solid var(--primary-color);
        color: var(--primary-color);
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background-color: var(--primary-color);
        color: var(--text-light);
    }

    hr.bg-dark {
        border-top: 1px solid var(--border-color);
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">


<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>

<div class="content bg-light text-dark">
    <div class="container mt-5">
        <!-- Profile Header -->
        <div class="card shadow-lg border-0">
            <div class="card-header">
                <h2 class="mb-0"><%= user.name %></h2>
                <p class="mb-0">Welcome to your profile</p>
            </div>

            <div class="card-body">
                <!-- Wallet Balance -->
                <div class="d-flex align-items-center mb-4">
                    <div class="icon-circle mr-3">
                        <i class="bi bi-wallet2 fa-2x"></i>
                    </div>
                    <div>
                        <h5 class="mb-0">Wallet Balance</h5>
                        <p class="wallet-balance mb-0">â‚¹<%= user.wallet %></p>
                    </div>
                </div>

                <!-- Referral Code Section -->
                <div class="mb-4">
                    <h5 class="mb-3">Your Referral Code</h5>
                    <div class="input-group" style="max-width: 400px;">
                        <input type="text" 
                               class="form-control form-control-lg" 
                               id="referralCode" 
                               value="<%= user.Referalcode %>" 
                               readonly
                               style="font-weight: 600; letter-spacing: 2px;">
                        <div class="input-group-append">
                            <button class="btn copy-button" 
                                    type="button" 
                                    id="copyButton"
                                    data-clipboard-target="#referralCode">
                                <i class="bi bi-copy"></i> Copy
                            </button>
                        </div>
                    </div>
                    <small class="form-text text-muted">Share this code with friends to earn rewards</small>
                </div>

                <hr class="my-4 bg-dark">

                <!-- Action Buttons -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="/profile/edit" class="btn btn-accent px-4">
                        <i class="bi bi-pencil-square mr-2"></i>Edit Profile
                    </a>
                    <a href="/profile/loadChangePasswordCheck" class="btn btn-outline-primary px-4">
                        <i class="bi bi-lock mr-2"></i>Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize Clipboard.js
    new ClipboardJS('#copyButton');

    // Add feedback when copied
    document.getElementById('copyButton').addEventListener('click', function() {
        const originalText = this.innerHTML;
        this.innerHTML = '<i class="bi bi-check2"></i> Copied!';
        setTimeout(() => {
            this.innerHTML = originalText;
        }, 2000);
    });
</script>
