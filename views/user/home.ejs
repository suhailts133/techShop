<% layout("../layouts/boilerplate") %>
<title><%= title %></title>

<style>
  /* Product Card Styles */
  .card {
    border: none;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    overflow: hidden;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .card img {
    transition: all 0.5s ease;
    padding: 1rem;
  }

  .card:hover img {
    transform: scale(1.05);
  }

  .card-body {
    padding: 1.5rem;
  }

  .card-title {
    color: #1a1a1a;
    font-weight: 500;
    letter-spacing: 0.5px;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .text-muted.small {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #666;
  }

  .text-success {
    color: #2c3e50 !important;
    font-size: 1.1rem;
  }

  .text-danger {
    color: #666 !important;
    font-size: 0.9rem;
  }

  .wishlist-icon {
    color: #2c3e50;
    transition: all 0.3s ease;
  }

  .wishlist-icon:hover {
    transform: scale(1.2);
  }

  .bi-heart-fill.text-danger {
    color: #dc3545 !important;
  }
</style>

<!-- Hero Carousel -->
<section class="mb-5">
  <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/banner/b1.jpg" class="d-block w-100" style="height: 50vh; object-fit: cover;" alt="First slide">
      </div>
      <div class="carousel-item">
        <img src="/banner/b2.jpg" class="d-block w-100" style="height: 50vh; object-fit: cover;" alt="Second slide">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<!-- Features Section -->
<section class="bg-light py-5 mb-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-6 col-md-3">
        <div class="text-center">
          <i class="bi bi-truck fs-1 mb-2"></i>
          <h5 class="mb-1">Free Shipping</h5>
          <p class="mb-0 small">For All Orders</p>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="text-center">
          <i class="bi bi-shield-check fs-1 mb-2"></i>
          <h5 class="mb-1">Secure Payment</h5>
          <p class="mb-0 small">100% secure payment</p>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="text-center">
          <i class="bi bi-arrow-counterclockwise fs-1 mb-2"></i>
          <h5 class="mb-1">Easy Returns</h5>
          <p class="mb-0 small">14 day return policy</p>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="text-center">
          <i class="bi bi-headset fs-1 mb-2"></i>
          <h5 class="mb-1">24/7 Support</h5>
          <p class="mb-0 small">Dedicated support</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- New Arrivals Section -->
<section class="container mb-5">
  <div class="text-center mb-4">
    <h2 class="position-relative d-inline-block pb-2 mb-0">
      New Arrivals
      <div class="border-bottom border-2 border-dark position-absolute start-50 translate-middle-x" style="width: 50px; bottom: 0;"></div>
    </h2>
  </div>

  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
    <% if (products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <a href="/productDetails?id=<%= product._id %>" class="text-decoration-none">
              <div class="position-relative" style="padding-top: 100%;">
                <img src="/uploads/products/<%= product.productImage[0] %>"
                     class="position-absolute top-0 start-0 w-100 h-100"
                     style="object-fit: contain;"
                     alt="<%= product.productName %>">
              </div>
            </a>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fs-6 text-truncate mb-2 "><%= product.productName %></h5>
              <% if (product.variants && product.variants.length > 0) {
                const variant = product.variants.find(v => v.quantity > 0);
                if (variant) {
                  let discount = product.productOffer > 0 ? product.productOffer : (product.category?.categoryOffer || 0);
                  let discountedPrice = (variant.salePrice * (100 - discount) / 100).toFixed(2);
              %>
                <p class="text-muted small mb-2"><%= variant.color %> - <%= variant.size %></p>
                <div class="mt-auto">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <span class="text-success fw-bold">₹<%= discountedPrice %></span>
                      <span class="text-danger text-decoration-line-through small ms-2">₹<%= variant.price.toFixed(2) %></span>
                    </div>
                    <button class="btn btn-link p-0 wishlist-icon" data-product-id="<%= product._id %>" data-variant-id="<%= variant._id %>">
                      <% const isInWishlist = wishlistItems.some(item => 
                        item.productId === product._id.toString() && 
                        item.variantId === variant._id.toString()
                      ); %>
                      <i class="bi <%= isInWishlist ? 'bi-heart-fill text-danger' : 'bi-heart' %> fs-5"></i>
                    </button>
                  </div>
                </div>
              <% } } %>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-4">
        <h3 class="text-muted">No products found!</h3>
      </div>
    <% } %>
  </div>
</section>

<!-- Newsletter Section -->
<section class="bg-light py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <h2 class="mb-3">Subscribe to Our Newsletter</h2>
        <p class="mb-4">Stay updated with our latest trends and products</p>
        <form class="d-flex gap-2">
          <input type="email" class="form-control" placeholder="Enter your email address">
          <button type="submit" class="btn btn-dark">Subscribe</button>
        </form>
      </div>
    </div>
  </div>
</section>

<script src="/js/homeShopWishlist.js"></script>