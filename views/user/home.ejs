<% layout("../layouts/boilerplate") %>
<title><%= title %></title>

<style>
  
:root {
  --primary-color: #FFFFFF;       /* Pure White */
  --primary-light: #F4F7F1;      /* Light Matcha */
  --accent-color: #A3B899;       /* Matcha Green */
  --text-light: #2C352A;         /* Deep Green */
  --text-muted: #8C9A86;         /* Muted Green */
  --border-color: #E5EBE1;       /* Soft Green */
  --success-color: #779668;      /* Forest Green */
  --error-color: #B9937A;        /* Warm Brown */
}
body{
  background: var(--primary-light);
}
.card {
  border: none;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.4s ease;
  position: relative;
}

.card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(224, 181, 179, 0.15);
}

.card:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(to right, var(--accent-color), var(--accent-hover));
  opacity: 0;
  transition: opacity 0.4s ease;
}

.card:hover:before {
  opacity: 1;
}

.card img {
  transition: all 0.5s ease;
  padding: 1rem;
  object-fit: contain;
}

.card:hover img {
  transform: scale(1.08);
}

.card-body {
  padding: 1.8rem;
  background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.9));
}

.card-title {
  font-weight: 600;
  font-size: 1.1rem;
  margin-bottom: 0.8rem;
  color: var(--text-light);
}

.text-muted.small {
  font-size: 0.85rem;
  letter-spacing: 0.5px;
  font-weight: 500;
}

.text-success {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--success-color) !important;
}

.text-danger {
  font-size: 0.9rem;
  text-decoration: line-through;
  opacity: 0.7;
  color: var(--error-color) !important;
}

.wishlist-icon {
  width: 35px;
  height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(224, 181, 179, 0.1);
  transition: all 0.3s ease;
}

.wishlist-icon:hover {
  background: rgba(224, 181, 179, 0.2);
  transform: scale(1.1);
}

.bi-heart-fill.text-danger {
  color: var(--error-color) !important;
}
  .hero-slider {
  position: relative;
  height: 80vh;
  min-height: 600px;
  overflow: hidden;
  margin-bottom: 4rem;
  background-color: var(--primary-dark);
}

.hero-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.8s ease-in-out;
  display: flex;
  align-items: center;
}

.hero-slide.current {
  opacity: 1;
  z-index: 1;
}

.hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, 
    rgba(44, 62, 80, 0.9) 0%, 
    rgba(52, 73, 94, 0.7) 50%,
    rgba(44, 62, 80, 0.5) 100%
  );
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  color: var(--text-light);
}

.hero-subtitle {
  font-size: 1.25rem;
  text-transform: uppercase;
  letter-spacing: 4px;
  margin-bottom: 1rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 0.5s;
  color: var(--text-muted);
}

.hero-title {
  font-size: 4.5rem;
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 2rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 0.7s;
}

.hero-description {
  font-size: 1.25rem;
  max-width: 600px;
  margin-bottom: 2.5rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 0.9s;
  color: var(--text-muted);
}

.hero-button {
  display: inline-block;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  background: var(--accent-color);
  color: var(--text-light);
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 1.1s;
  text-decoration: none;
}

.hero-button:hover {
  background: var(--accent-hover);
  transform: translateY(-2px);
}

.hero-slide.current .hero-subtitle,
.hero-slide.current .hero-title,
.hero-slide.current .hero-description,
.hero-slide.current .hero-button {
  opacity: 1;
  transform: translateY(0);
}

.hero-nav {
  position: absolute;
  bottom: 2rem;
  right: 2rem;
  z-index: 2;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.hero-nav-button {
  width: 50px;
  height: 50px;
  border: 2px solid var(--border-color);
  background: transparent;
  color: var(--text-light);
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-nav-button:hover {
  background: var(--accent-color);
  border-color: var(--accent-color);
  color: var(--text-light);
}

.hero-dots {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 0.5rem;
  z-index: 2;
}

.hero-dot {
  width: 10px;
  height: 10px;
  border: 2px solid var(--border-color);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.hero-dot.active {
  background: var(--accent-color);
  border-color: var(--accent-color);
}

.hero-dot:hover {
  border-color: var(--accent-color);
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 3rem;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
  .hero-description {
    font-size: 1.1rem;
  }
}
</style>

