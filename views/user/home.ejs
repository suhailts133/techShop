<% layout("../layouts/boilerplate") %>
<title><%= title %></title>

<style>
  .card {
    border: none;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    overflow: hidden;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .card img {
    transition: all 0.5s ease;
    padding: 1rem;
  }

  .card:hover img {
    transform: scale(1.05);
  }

  .card-body {
    padding: 1.5rem;
  }

  .card-title {
    color: #1a1a1a;
    font-weight: 500;
    letter-spacing: 0.5px;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .text-muted.small {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #666;
  }

  .text-success {
    color: #2c3e50 !important;
    font-size: 1.1rem;
  }

  .text-danger {
    color: #666 !important;
    font-size: 0.9rem;
  }

  .wishlist-icon {
    color: #2c3e50;
    transition: all 0.3s ease;
  }

  .wishlist-icon:hover {
    transform: scale(1.2);
  }

  .bi-heart-fill.text-danger {
    color: #dc3545 !important;
  }
  .hero-slider {
  position: relative;
  height: 80vh;
  min-height: 600px;
  overflow: hidden;
  margin-bottom: 4rem;
}

.hero-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.8s ease-in-out;
  display: flex;
  align-items: center;
}

.hero-slide.current {
  opacity: 1;
  z-index: 1;
}

.hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%);
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  color: white;
}

.hero-subtitle {
  font-size: 1.25rem;
  text-transform: uppercase;
  letter-spacing: 4px;
  margin-bottom: 1rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 0.5s;
}

.hero-title {
  font-size: 4.5rem;
  font-weight: 600;
  line-height: 1.2;
  margin-bottom: 2rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 0.7s;
}

.hero-description {
  font-size: 1.25rem;
  max-width: 600px;
  margin-bottom: 2.5rem;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 0.9s;
}

.hero-button {
  display: inline-block;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  background: white;
  color: black;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  opacity: 0;
  transform: translateY(20px);
  transition: all 0.8s ease-out 1.1s;
  text-decoration: none;
}

.hero-button:hover {
  background: #f8f8f8;
  transform: translateY(-2px);
}

.hero-slide.current .hero-subtitle,
.hero-slide.current .hero-title,
.hero-slide.current .hero-description,
.hero-slide.current .hero-button {
  opacity: 1;
  transform: translateY(0);
}

.hero-nav {
  position: absolute;
  bottom: 2rem;
  right: 2rem;
  z-index: 2;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.hero-nav-button {
  width: 50px;
  height: 50px;
  border: 2px solid white;
  background: transparent;
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-nav-button:hover {
  background: white;
  color: black;
}

.hero-dots {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 0.5rem;
  z-index: 2;
}

.hero-dot {
  width: 10px;
  height: 10px;
  border: 2px solid white;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
}

.hero-dot.active {
  background: white;
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 3rem;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
  .hero-description {
    font-size: 1.1rem;
  }
}
</style>


