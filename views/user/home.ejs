<% layout("../layouts/boilerplate") %>

<title><%= title %></title>
<section class="container-extended mt-0">
    <!-- Carousel Section -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/banner/b1.jpg" class="d-block w-100 img-fluid" alt="First slide" style="object-fit: cover; height: 500px;">
            </div>
            <div class="carousel-item">
                <img src="/banner/b2.jpg" class="d-block w-100 img-fluid" alt="Second slide" style="object-fit: cover; height: 500px;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- New Arrivals Section -->
<h2 class="text-center mt-5 mb-4">New Arrivals</h2>
<div class="container">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <% for(let i = 0; i < products.length; i++) { %>
            <div class="col">
                <div class="card">
                    <a href="/productDetails?id=<%= products[i]._id %>">
                        <img src="/uploads/products/<%= products[i].productImage[1] %>" class="card-img-top" alt="<%= products[i].productName %>">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= products[i].productName %></h5>

                        <!-- Show only sale price and regular price for the first available variant -->
                        <% if (products[i].variants && products[i].variants.length > 0) { 
                            const variant = products[i].variants.find(v => v.quantity > 0); %>
                            <% if (variant) { %>
                                <p class="card-text">
                                    <span class="text-success">₹<%= variant.salePrice %></span> 
                                    <span class="text-danger"><s>₹<%= variant.price %></s></span>
                                </p>
                            <% } %>
                        <% } %>

                        <div class="d-flex justify-content-between">
                            <button class="btn btn-light btn-sm" title="Add to Wishlist">
                                <i class="bi bi-heart"></i>
                            </button>
                            
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
