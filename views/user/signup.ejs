<% layout("../layouts/boilerplate") %>
<title><%= title  %></title>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6"> 
      <h3 class="text-center mb-4">Sign Up</h3>
      <form id="signupForm" class="validated-form" method="post" action="/signup" novalidate>
        <!-- Name -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required pattern="^[a-zA-Z]+(\s[a-zA-Z]+)*$">
          <div class="invalid-feedback">
         
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required>
          <div class="invalid-feedback">
          
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <!-- Phone -->
        <div class="mb-3">
          <label for="phone" class="form-label">Phone</label>
          <input type="text" class="form-control" id="phone" name="phone" required pattern="^\d{10}$">
          <div class="invalid-feedback">
            
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&#])[A-Za-z\d@$!%*?&#]{8,}$">
          <div class="invalid-feedback">
            
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <!-- Confirm Password -->
        <div class="mb-3">
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
          <div class="invalid-feedback">
            
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <!-- Google Login Button -->
        <div class="mb-3 text-center">
          <a href="/auth/google" class="btn btn-outline-dark w-100 d-flex align-items-center justify-content-center gap-2 google-button">
            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" class="google-logo" width="30px">
            Login with Google
          </a>
        </div>
        <!-- Submit Button -->
        <div class="d-grid">
          <button type="submit" class="btn btn-dark">Sign Up</button>
        </div>
        <!-- Already Signed Up -->
        <div class="mt-3 text-center">
          <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/js/signup.js"></script>
