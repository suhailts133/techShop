<% layout("../layouts/boilerplate") %>
<title><%= title  %></title>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center mb-4">Forget Password</h3>

                    <form id="forgetPasswordForm" method="post" action="/loadForgetPasswordPage" novalidate>
                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required autocomplete="email">
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <!-- Send OTP Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Send OTP</button>
                        </div>

                        <!-- Back to Login Link -->
                        <div class="mt-3 text-center">
                            <p>Remember your password? <a href="/login">Login here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/forgetPassword.js"></script>
